spring: 
  application: 
    name: evouchers
  thymeleaf:
    prefix: classpath:/templates/mail/
#  mvc: 
#    throw-exception-if-no-handler-found: true
  resources:
    add-mappings: false
### mail
  mail: 
    default-encoding: UTF-8
    host: smtp.gmail.com
    protocol: smtp
    port: 587
    username: 
    password: 
    test-connection: false
    properties: 
      mail: 
        smtp: 
          auth: false
          starttls: 
            enable: true
          connectiontimeout: 5000
          timeout: 3000
          writetimeout: 5000
    
### data access
  datasource:
    driver-class-name: org.postgresql.Driver
    username: 
    password: 
    url: jdbc:postgresql://localhost:5432/evouchersdb

  jooq:
    sql-dialect: POSTGRES
          
server: 
  port: 8443
  ssl:
    key-store: src/main/resources/security/keystore.p12
    key-store-password: password
    keyStoreType: PKCS12
    keyAlias: evouchers
   
### logging
logging: 
  level: 
    org.jooq.tools: DEBUG
    org.bspv.evoucher: DEBUG
    org.springframework.web.servlet.mvc: DEBUG

### security
security: 
  jwt: 
    secret: key
    default-expiration-time: 864000
    
### specific app properties
mail: 
  from: evoucher@bspv.org
  answer: noreply.evoucher@bspv.org
  archive: archive.evoucher@bspv.org
  
voucher: 
  responsible: El presidente
barcode: 
  key: key
